<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/main_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/mainView" android:background="#ffffff" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.vuforia.captureapp.SquareImageGridView android:id="@+id/item_capture_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="centerCrop"/>
            <RelativeLayout android:id="@+id/greyOutView" android:background="#66000000" android:padding="6dp" android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageView android:id="@+id/greyOutImageView" android:clickable="false" android:layout_width="92px" android:layout_height="92px" android:src="@drawable/selection_icon_selected" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
            </RelativeLayout>
        </FrameLayout>
        <View android:layout_width="match_parent" android:layout_height="2dp"/>
        <TextView android:textSize="14sp" android:ellipsize="end" android:id="@+id/item_capture_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:lines="1"/>
        <TextView android:textSize="12sp" android:textColor="#a9a9a9" android:id="@+id/item_capture_lastModified" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
    </LinearLayout>
</FrameLayout>
